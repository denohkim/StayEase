<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Registration</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <link rel="stylesheet" href="/style.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
  <style>
    /* Custom CSS to center the container */
  </style>
</head>

<body>
  <%- include ('navbar.ejs') %>

    <div class="d-flex justify-content-center card shadow border-0 position-absolute top-50 start-50 translate-middle"
      style="width: 360px">
      <div class="card-body">
        <h5 class="card-title mb-5">Student Registration</h5>
        <% if (messages.error_msg) { %>
          <div class="alert alert-danger" role="alert">
            <%= messages.error_msg %>
          </div>
          <% } %>
            <form action="/auth/register" method="POST">
              <div class="mb-4">
                <label for="firstName" class="form-label mb-3">First Name</label>
                <input type="text" class="form-control" id="firstName" placeholder="Enter first name" name="fname"
                  required />
              </div>
              <div class="mb-4">
                <label for="lastName" class="form-label mb-3">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Enter last name" name="lname"
                  required />
              </div>
              <div class="mb-4">
                <label for="email" class="form-label mb-3">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required />
              </div>
              <div class="mb-4 ">
                <label for="password" class="form-label mb-3">Password</label>
                <div class="input-group">
                  <input type="password" class="form-control" id="password" placeholder="Password" name="password"
                    required />
                  <button class="btn btn-outline-light" type="button" id="password-toggle"
                    style="border: 1px solid #dee2e6;">
                    <i class="fas fa-eye" style="color: #1abc9c;"></i>
                  </button>
                </div>
              </div>
              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="agreeTerms" required />

                <label class="form-check-label" for="agreeTerms">
                  I agree to the terms and conditions
                </label>
              </div>
              <div class="d-grid gap-2 mb-3">
                <button class="primary-form-button" type="submit">
                  Register
                </button>
              </div>
              <p>
                Already have an account? <a href="/auth/login" class="link">Login</a>
              </p>
            </form>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      $(document).ready(function () {
        // Toggle password visibility
        $('#password-toggle').click(function () {
          var passwordInput = $('#password');
          var passwordToggle = $('#password-toggle');
          if (passwordInput.attr('type') === 'password') {
            passwordInput.attr('type', 'text');
            passwordToggle.find('i').removeClass('fa-eye').addClass('fa-eye-slash');
          } else {
            passwordInput.attr('type', 'password');
            passwordToggle.find('i').removeClass('fa-eye-slash').addClass('fa-eye');
          }
        });
      });
    </script>
</body>

</html>